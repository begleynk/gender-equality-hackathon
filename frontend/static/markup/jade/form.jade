extends templates/master

mixin field(title,id,type)
    -var type = type || 'text';
    fieldset
        label(for=id)= title
        -if (type === 'textarea')
            textarea(id=id)
        -else if(type === 'text')
            input(type=type, id=id)
        -else
            input(type=type)

append content
    p.centered.
        Share your story. Help the world understand.
    form.storyform
        h2 Make my story
        fieldset.storyform-chapter
            legend Story chunk
            +field('At this place','location')
            +field('I experienced','text', 'textarea')
            +field('What I think about gender equality', 'view','textarea')
            a.storyform-addchapter.btn(role='button' href='#')
                span add another chapter
    .storyform-actions
        button.btn.btn-prominent(type='submit', id='submit') Submit your story

