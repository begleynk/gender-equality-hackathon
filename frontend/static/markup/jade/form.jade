extends templates/master

mixin field(title,type)

    -var id = title.replace(' ','-').toLowerCase();
    -var type = type || 'text';
    fieldset
        label(for=id)= title
        -if (type === 'textarea')
            textarea(id=id)
        -else if(type === 'text')
            input(type=type, id=id)
        -else
            input(type=type)

append content
    h2 Tell your story
    p.
        Intro text
    form.storyform
        h3 Right now I'm&hellip;
        fieldset.storyform-chapter
            legend Story chunk
            +field('My location')
            +field('Text')
            +field('View','textarea')
            a.storyform-addchapter.btn(role='button' href='#')
                span add another chapter
        fieldset.storyform-actions
            button.btn.btn-prominent(type='submit') Submit your story

