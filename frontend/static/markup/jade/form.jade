extends templates/master

mixin field(title,type)

    -var id = title.replace(' ','-').toLowerCase();
    -var type = type || 'text';
    fieldset
        label(for=id)= title
        -if (type === 'textarea')
            textarea(id=id)
        -else if(type === 'text')
            input(type=type, id=id)
        -else
            input(type=type)

append content
    h2 Submit my story
    p.
        Intro text
    form.storyform
        p Each step
        +field('My location')
        +field('Text')
        +field('View','textarea')
        button(type='submit') Submit my story

